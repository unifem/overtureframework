	      int j1a=max(gid(0,0)-extrav[0][0],i1-width);
	      int j1b=min(gid(1,0)+extrav[1][0],i1+width);
	  
	      for( j3=j3a; j3<=j3b && !found ; j3++)
		for( j2=j2a; j2<=j2b && !found ; j2++)
		  for( j1=j1a; j1<=j1b; j1++)
