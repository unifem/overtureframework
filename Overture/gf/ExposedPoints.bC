	}
      }
      else
      {
	if( info & 1 )
	  fprintf(debugFile,"*** All %i exposed points could be interpolated (SW=%i,EI=%i))***\n", 
		  numberOfExposedPoints,stencilWidth,assumeInterpolationNeighboursAreAssigned);
      }

