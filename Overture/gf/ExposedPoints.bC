	  else
	  {
	    for( int i=start; i<end; i++ )
	    {
	      x(i,0)=center(ia(i,0),ia(i,1),ia(i,2),0);     
	      x(i,1)=center(ia(i,0),ia(i,1),ia(i,2),1);     
