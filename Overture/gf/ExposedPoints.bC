	  const int centerDim2=center_.getRawDataSize(2);
#define center(i0,i1,i2,i3) centerp[i0+centerDim0*(i1+centerDim1*(i2+centerDim2*(i3)))]
	
	  if( numberOfDimensions==2 )
	  {
	    for( int i=start; i<end; i++ )
